#!/bin/sh
set -eu

# Set your version here, or pass VERSION=... in env.
VERSION="${VERSION:-5.14.0}"

echo "==> Building luantiserver (unified image with SQLite3 + PostgreSQL support)"

# Build versioned tags
docker build --target "luantiserver" -t "luantiserver:${VERSION}" .
docker build --target "luantiserver" -t "luantiserver:latest" .

echo
echo "==> Build complete. Tagged images:"
docker images | grep ^luantiserver
